    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_border"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/noti_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:hint="Insert title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_border"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/noti_descri_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:hint="Insert title"/>

    </LinearLayout>

    <Button
        android:id="@+id/send_noti_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_gradient"
        android:textColor="@color/colorWhite"
        android:text="send notification"/>

    <Button
        android:id="@+id/send_noti_to_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_gradient"
        android:textColor="@color/colorWhite"
        android:text="send notification to all"/>

    <Button
        android:id="@+id/local_noti_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_gradient"
        android:textColor="@color/colorWhite"
        android:text="local notification"/>

</LinearLayout>